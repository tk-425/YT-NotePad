{
  "manifest_version": 3,
  "name": "YT-NotePad",
  "version": "1.0",
  "description": "Adds a floating textarea on YouTube videos.",
  "icons": {
    "128": "/public/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "/src/background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["/src/content.js"]
    }
  ]
}
